<Window x:Class="SingDictionaryWPF.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="O slovníku" Height="320" Width="448" Closing="Window_Closing" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" >
        <DockPanel Margin="0,0,0,5" Height="48" DockPanel.Dock="Top" HorizontalAlignment="Stretch">
            
            <!--<Image Canvas.Left="17"   
                   Name="image1" 
                   Stretch="Fill" 
